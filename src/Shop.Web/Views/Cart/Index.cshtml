@model CartViewModel

<div class="row">
    <div class="col-lg-12">
        <h1>Welcome: @User.Identity.Name</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2>Cart items [@Model.Items.Count], total: @Model.TotalPrice PLN</h2>
        <div class="list-group">
            @foreach (var item in Model.Items)
            {
                <a href="#" class="list-group-item list-group-item-action">@item.ProductName - @item.TotalPrice PLN [@item.Quantity / @item.UnitPrice PLN]</a>
            }
        </div>
    </div>
</div>
@if (Model.Items.Any())
{
    <div class="row">
        <form asp-action="Create" asp-controller="Orders" method="post">
            <button type="submit" class="btn btn-default">Purchase</button>
        </form>
    </div>
}
